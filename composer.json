{
    "name": "windcloud/laravel-git-sniffer",
    "description": "An artisan command to check your code standards via pre-commit git hook.",
    "keywords": ["laravel", "codesniffer", "phpcs", "git", "pre-commit", "hook"],
    "license": "MIT",
    "authors": [
        {
            "name": "Wind Cloud",
            "email": "tat.pham89@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "illuminate/console": "^6.0.0",
        "squizlabs/php_codesniffer": "^3.*",
        "sirbrillig/phpcs-variable-analysis": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Avirdz\\LaravelGitSniffer\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Avirdz\\LaravelGitSniffer\\GitSnifferServiceProvider"
            ]
        }
    }
}
